    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "TS-NODE:server",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--nolazy",
                "-r", "ts-node/register/transpile-only",
                "-r", "tsconfig-paths/register"
            ],
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "TS_NODE_PROJECT": "projects/server/tsconfig.json",
            },
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceRoot}/**",
                "!**/node_modules/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "projects/server/src/index.ts"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}